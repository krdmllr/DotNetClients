<Window x:Class="Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf"
        mc:Ignorable="d"
        Title="WPF Desktop" Height="450" Width="800">
    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Text="Hello, this is a WinUI 3 project!" />
        <Button Click="myButton_Click">Click Me</Button>
        <TextBlock x:Name="CounterTextBlock" Text="Count: 0" />
        <TextBox TextChanged="TextBox_TextChanged" />
        <TextBlock x:Name="TextFieldValueBlock" Text="Textfield value:" />
    </StackPanel>
</Window>
